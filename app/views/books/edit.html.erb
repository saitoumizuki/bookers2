<% if current_user == @book.user%>
<!-- header  部分テンプレート　_header.html.erb -->
<%= render 'books/header', books: @books %>
<div class="body">
	<div class="container">
		<%= render 'books/notice' %>
		<div class='row'>
			<div class='col-md-6 col-md-offset-3'>
				<h1>Editing Book</h1>
					<%= form_for(@book) do |f| %>
						<div class="field row">
							<label for="book_title">Title</label>
						    <%= f.text_field :title %>
						</div>
						<div class="field row">
						    <label for="book_opinion">Opinion</label>
						    <%= f.text_area :opinion %>
						</div>
						<div class="actions row">
						    <%= f.submit 'Update Book' %>
						</div>

					<% end %>
					<%= link_to "Show", book_path(@book) %> |
					<%= link_to "Book", book_path(@book) %>
			</div>
		</div>
	</div>
</div>

<!-- hoofer  部分テンプレート　_footer.html.erb -->
<%= render 'books/footer' %>

<% else %>
<p>他人の投稿は編集・削除できません。<%= link_to "Back", root_path %></p>

<% end %>