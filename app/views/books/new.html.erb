<!-- book/new -->
<!-- header  部分テンプレート　_header.html.erb -->
<%= render 'books/header', books: @books %>

<div class="body">
	<div class='container'>
		<div class='row'>
			<div class='col-xs-3'>
				<div class="user_info">
					<h2>User info</h2>
					<table class='table'>
						<tr>
							<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
						</tr>
						<tr>
							<th>name</th>
							<th><%= @user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.introduction %></th>
						</tr>
					</table>
					<div class='row'>
						<% if @user.id == current_user.id %>
							<p><%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
						<% else %>
							<p><%= link_to "", user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
						<% end %>
				    </div>
				</div>

				<div class="new_book">
					<h2>New book</h2>
					<%= form_for(@book) do |f| %>
						<div class="field row">
							<label for="book_title">Title</label>
							<%= f.text_field :title, class:"col-xs-12" %>
						</div>
						<div class="field row">
							<label for="book_opinion">Opinion</label>
							<%= f.text_area :opinion, class:"col-xs-12" %>
						</div>
						<div class="actions row">
							<%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>
						</div>
					<% end %>
				</div>
			</div>

			<!-- 右　全ブックの一覧　Image title　opinion-->
			<div class='col-xs-9'>
				<h2>Books</h2>

				<table class='table table-hover table-inverse'>
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<% @books.each do |book| %>
						<tbody>
							<tr>
								<!-- 投稿ユーザーのshowページへリンク、プロフ画像の表示 -->
								<td><a href=""><img class="attachment user profile_image fallback" /></a></td>
								<td><%= link_to book.title, book_path(book) %></td>
								<td><%= book.opinion %></td>
							</tr>
						</tbody>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>


<!-- hoofer  部分テンプレート　_footer.html.erb -->
<%= render 'books/footer' %>
