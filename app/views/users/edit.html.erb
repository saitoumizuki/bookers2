<!-- user/edit -->
<!-- header  部分テンプレート　_header.html.erb -->
<%= render 'books/header', books: @books %>


<div class="body">
	<div class="container">
		<%= render 'books/notice' %>
		<div class="col-xs-3">
			<h2>User info</h2>

			<%= form_for(@user) do |f| %><!-- <form class="edit_user"> -->
				<div class="field">
					<label for="user_name">Name</label>
					<%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
				</div>

				<div class="field">
					<label for="user_image">Image</label>
					<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
				</div>

				<div class="field">
					<label for="user_introduction">Introduction</label>
					<%= f.text_field :introduction, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"自己紹介"%>
				</div>

				<div class="actions">
					<%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
				</div>
			<% end %>
		</div>
	</div>
</div>

<!-- hoofer  部分テンプレート　_footer.html.erb -->
<%= render 'books/footer' %>